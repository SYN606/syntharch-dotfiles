set -eU fish_color_cwd_root
set -eU fish_color_valid_path
set -eU fish_color_selection
set -eU fish_color_search_match
set -eU fish_color_status

# Core colors
set -U fish_color_normal f8f8f2
set -U fish_color_command fe7f2d
set -U fish_color_param fe7f2d
set -U fish_color_keyword EAF06A
set -U fish_color_operator EAF06A
set -U fish_color_quote EAF06A
set -U fish_color_end fe7f2d

# Errors and warnings
set -U fish_color_error dc143c
set -U fish_color_cancel dc143c --reverse
set -U fish_color_status dc143c

# Comments and autosuggestions
set -U fish_color_comment fe7f2d
